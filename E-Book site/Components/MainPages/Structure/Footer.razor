<!-- Footer Start -->
<footer style="background-color:#1B263B; color:#FAF9F6; font-family: 'Open Sans', sans-serif; padding: 2rem 1rem;">
    <div class="container">
        <div class="row align-items-center text-center text-md-start mb-3">

            <!-- Left: Brand -->
            <div class="col-md-4 mb-3 mb-md-0">
                <div style="font-family: 'Merriweather', serif; font-weight: 700; font-size: 1.25rem; color:#FF6F3C;">
                    E-Book Shelf
                </div>
            </div>

            <!-- Center: Social Media Links -->
            <div class="col-md-4 mb-3 mb-md-0 d-flex justify-content-center gap-4">
                <a href="@socials?.FB" target="_blank" class="text-light hover-in">
                    <i class="bi bi-facebook fs-3 "></i>
                </a>
                <a href="@socials?.X" target="_blank" class="text-light hover-in">
                    <i class="bi bi-twitter-x fs-3 "></i>
                </a>
                <a href="@socials?.LinkD" target="_blank" class="text-light hover-in">
                    <i class="bi bi-linkedin fs-3 "></i>
                </a>
                <a href="@socials?.Insta" target="_blank" class="text-light hover-in">
                    <i class="bi bi-instagram fs-3 "></i>
                </a>
            </div>

            <!-- Right: Back to Top Button with Orange Arrow -->
            <div class="col-md-4 d-flex justify-content-center justify-content-md-end">
                <button class="hover-in btn rounded-circle shadow"
                        style="position:fixed; bottom: 20px; right: 20px; z-index: 1000; background-color:#FF6F3C;"
                        onclick="window.scrollTo({ top: 0, behavior: 'smooth' });">
                    <i class="bi bi-arrow-up text-white fs-4"></i>
                </button>
               
            </div>
        </div>

        <hr class="border-secondary" />

        <!-- Bottom Center: Copyright -->
        <div class="text-center small text-muted">
            <span style="color:#FF6F3C;">&copy; @DateTime.Now.Year Umair Khalid & Laiba. All rights reserved. E-Book Shelf is a project by Umair Khalid & Laiba.</span>
        </div>
    </div>
</footer>
<!-- Footer End -->


@code {
    private Social socials { get; set; }

    protected override void OnInitialized()
    {

        socials = Db.Social.FirstOrDefault();

    }
}
