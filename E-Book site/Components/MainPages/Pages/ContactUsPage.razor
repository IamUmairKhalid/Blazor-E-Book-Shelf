@page "/contactus"
@rendermode InteractiveServer
<PageTitle>Contact Us</PageTitle>

<div class="container mt-5 mb-5 card shadow-lg p-5">
    <div class="row g-4 ">
        <!-- Left: Contact Info -->
        <div class="col-md-5 ">
            <h2 class="mb-4">Contact Us</h2>
            <p class="text-muted">
                We'd love to hear from you! Reach out with any questions or feedback.
            </p>
            <ul class="list-unstyled mt-4">
                <li class="mb-4 d-flex align-items-center">
                    <div class="circle-icon me-3">
                        <i class="bi bi-geo-alt-fill"></i>
                    </div>
                    <span><strong>Address<br /></strong>@aboutUs?.Address</span>
                </li>
                <li class="mb-4 d-flex align-items-center">
                    <div class="circle-icon me-3">
                        <i class="bi bi-envelope-fill"></i>
                    </div>
                    <span><strong>Email<br /></strong> @aboutUs?.Email</span>
                </li>
                <li class="mb-4 d-flex align-items-center">
                    <div class="circle-icon me-3">
                        <i class="bi bi-telephone-fill"></i>
                    </div>
                    <span><strong>Phone<br /></strong>@aboutUs?.Phone</span>
                </li>
            </ul>
        </div>

        <!-- Right: Contact Form -->
        <div class="col-md-7 ">
            <EditForm Model="@contact" OnValidSubmit="@HandleSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="row g-3">
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Full Name</label>
                        <InputText class="form-control" @bind-Value="contact.Name" />
                        <ValidationMessage For="@(() => contact.Name)" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Email Address</label>
                        <InputText type="email" class="form-control" @bind-Value="contact.Email" />
                        <ValidationMessage For="@(() => contact.Email)" />
                    </div>

                    <div class="mb-3 col-md-12">
                        <label class="form-label">Subject</label>
                        <InputText class="form-control" @bind-Value="contact.Subject" />
                        <ValidationMessage For="@(() => contact.Subject)" />
                    </div>

                    <div class="mb-3 col-md-12">
                        <label class="form-label">Message</label>
                        <InputTextArea class="form-control" @bind-Value="contact.Message" Rows="5" />
                        <ValidationMessage For="@(() => contact.Message)" />
                    </div>
                </div>
                <Button class="btn btn-primary w-100" @onclick=HandleSubmit>Send Message</Button>
            </EditForm>
        </div>
    </div>
</div>

<!--Toaster Alert message-->
<Toasts class="p-3" Messages="messages" AutoHide="true" StackLength="3" Placement="ToastsPlacement.TopRight" />


@code {
    List<ToastMessage> messages = new List<ToastMessage>();
    private Model.ContactUs contact = new();
    private Model.AboutUs? aboutUs;

    protected override void OnInitialized()
    {
        // Initialize any necessary data or services here
        aboutUs = Db.AboutUs.FirstOrDefault();

    }

    private void HandleSubmit()
    {
        messages.Add(CreateToastMessage(ToastType.Success));
        Db.ContactUs.Add(contact);
        Db.SaveChanges();
       
        contact = new();
        
    }


    <!-- Successful Message -->
    private ToastMessage CreateToastMessage(ToastType toastType)
       => new ToastMessage
           {
               Type = toastType,
               Title = "Message",
               HelpText = $"{DateTime.Now}",
               Message = $"Hello,The Message is Successfully Sended. DateTime: {DateTime.Now}",
           };
}
