@page "/search"
@rendermode InteractiveServer
<PageTitle>Searc Book</PageTitle>

<!-- Search Start -->
<div class="container-fluid mt-2 mb-3 wow fadeIn border-3 shadow-sm" data-wow-delay="0.1s" style="padding: 35px; background-color:#FF6F3C;">
    <div class="container">
        <div class="row g-3 align-items-end">
            <!-- Keyword -->
            <div class="col-12 col-md-3">
                <input type="text" class="form-control border-0 shadow-sm" placeholder="Keyword" />
            </div>

            <!-- Category -->
            <div class="col-12 col-md-3">
                <select class="form-select border-0 shadow-sm">
                    <option selected disabled>Category</option>
                    <option value="1">Category 1</option>
                    <option value="2">Category 2</option>
                    <option value="3">Category 3</option>
                </select>
            </div>

            <!-- Location -->
            <div class="col-12 col-md-3">
                <select class="form-select border-0 shadow-sm">
                    <option selected disabled>Location</option>
                    <option value="1">Location 1</option>
                    <option value="2">Location 2</option>
                    <option value="3">Location 3</option>
                </select>
            </div>

            <!-- Search Button -->
            <div class="col-12 col-md-3">
                <button class="btn btn-dark border-0 w-100 shadow-sm">Search</button>
            </div>
        </div>
    </div>
</div>


<!-- Search End -->

